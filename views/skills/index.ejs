<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <title>Express Developer Skills</title>
</head>
<body>
    <h1><u>Express Developer Skills</u></h1>
    <h2><u>Developer Skills as of <%= time %></u></h2>
    <a href="/skills/new">Add a New Skill</a>
    <ul>
        
      <% skills.forEach(function(skill) { %>
        <li>
            <a href="/skills/<%= skill.id %>"><%= skill.skill %></a>
            - 
          <%= skill.learned ? 'Yes' : ' No' %>
          <form action="/skills/<%= skill.id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">Delete Skill</button>
          </form>
        </li>
      <% }); %>
    </ul>
    
  </body>

</html>